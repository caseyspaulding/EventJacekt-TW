{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@/utils/*": ["utils/*"],
      "@/db/*": ["db/*"],
      "@/types/*": ["./types/*"],
      "@/data/*": ["data/*"],
      "@/lib/*": ["lib/*"] // Corrected path for @/lib
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/dashboard/[org]/events/[eventSlug]/create-tickets",
    "hooks/useStripeConnect.ts",
    "utils/Gradient.ts"
  ]
}
